{
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "plugins": [
        "./node_modules/prettier-plugin-go-template"
    ],
    "overrides": [
        {
            "files": [
                "*.html"
            ],
            "options": {
                "parser": "go-template"
            }
        },
        {
            "files": [
                "*.json"
            ],
            "options": {
                "tabWidth": 4
            }
        }
    ]
}
